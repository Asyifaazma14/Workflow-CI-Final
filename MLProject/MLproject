name: sleep-health-rf-baseline

# boleh pakai conda.yaml yang ada di folder MLProject
conda_env: conda.yaml

entry_points:
  main:
    parameters:
      data_path: {type: str}
      target_col: {type: str}
      experiment_name: {type: str}
      tracking_uri: {type: str}
    command: >
      python modelling.py
      --data-path {data_path}
      --target-col "{target_col}"
      --experiment-name "{experiment_name}"
      --tracking-uri "{tracking_uri}"
